<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.Tubes_PBO.controllers.RoleLogincontroller"
            prefWidth="800" prefHeight="550">

    <children>
        <VBox alignment="CENTER" spacing="15"
              prefWidth="800" prefHeight="550">
            
            <padding>
                <Insets top="40"/>
            </padding>

            <!-- LOGO -->
            <ImageView fitHeight="90" fitWidth="90" preserveRatio="true">
                <image>
                    <Image url="@Logo.png"/>
                </image>
            </ImageView>

            <!-- TITLE -->
            <Label text="Welcome to Donat Keliling"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;" />

            <Label text="Masukkan menggunakan akun ANDA pada:"
                   style="-fx-font-size: 14px;" />

            <!-- BUTTON CUSTOMER -->
            <Button text="Customer"
                    onAction="#onCustomerClick"
                    style="-fx-background-color: #2196F3; 
                           -fx-text-fill: white; 
                           -fx-padding: 8 32; 
                           -fx-background-radius: 6;
                           -fx-font-size: 14px;" />

            <Label text="OR" style="-fx-font-size: 14px;" />

            <!-- BUTTON KARYAWAN -->
            <Button text="Karyawan"
                    onAction="#onKaryawanClick"
                    style="-fx-background-color: #2196F3; 
                           -fx-text-fill: white; 
                           -fx-padding: 8 30; 
                           -fx-background-radius: 6;
                           -fx-font-size: 14px;" />

     <Label text="Belum punya akun?"
       style="-fx-font-size: 13px;" />

<Button text="Daftar Sekarang"
        onAction="#openRegisterPopup"
        style="-fx-background-color: transparent;
               -fx-text-fill: #2196F3;
               -fx-underline: true;
               -fx-font-size: 13px;" />

        </VBox>
    </children>
</AnchorPane>
