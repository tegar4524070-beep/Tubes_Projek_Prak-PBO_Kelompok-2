<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.Tubes_PBO.controllers.Logincontroller"
            prefWidth="800" prefHeight="550">

    <children>
        <VBox alignment="CENTER" spacing="15"
              prefWidth="800" prefHeight="550">

            <padding>
                <Insets top="40"/>
            </padding>

            <!-- LOGO -->
            <ImageView fitHeight="90" fitWidth="90" preserveRatio="true">
                <image>
                    <Image url="@Logo.png"/>
                </image>
            </ImageView>

            <!-- TITLE -->
            <Label text="Welcome to Donat Keliling (DOLI)"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;" />

            <Label text="Masukkan Username Anda untuk Log In"
                   style="-fx-font-size: 14px;" />

            <!-- USERNAME -->
            <TextField fx:id="usernameField"
                       promptText="Username"
                       maxWidth="250" />

            <!-- PASSWORD -->
            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           maxWidth="250" />

            <!-- BUTTON -->
            <Button text="Login"
                    onAction="#login"
                    maxWidth="150"
                    style="-fx-background-color: #2196F3; 
                           -fx-text-fill: white; 
                           -fx-padding: 8 32;
                           -fx-font-size: 14px;
                           -fx-background-radius: 6;" />

        </VBox>
    </children>

</AnchorPane>
