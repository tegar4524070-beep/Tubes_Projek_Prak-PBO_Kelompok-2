<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.Tubes_PBO.controllers.RegisterController"
            prefWidth="350" prefHeight="420">

    <VBox spacing="12" alignment="CENTER"
          prefWidth="350" prefHeight="420">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Registrasi Akun"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TextField fx:id="usernameField"
                   promptText="Username" />

        <PasswordField fx:id="passwordField"
                       promptText="Password" />

        <PasswordField fx:id="confirmPasswordField"
                       promptText="Ulangi Password" />

        <ComboBox fx:id="roleBox"
                  promptText="Pilih Role" />

        <Button text="Daftar"
                onAction="#handleRegister"
                style="-fx-background-color: #2196F3;
                       -fx-text-fill: white;
                       -fx-padding: 8 40;" />

        <Button text="Batal"
                onAction="#closePopup"
                style="-fx-background-color: transparent;
                       -fx-text-fill: red;" />
    </VBox>
</AnchorPane>
